                    <span style="font-weight: 400">* Indicates that the period spans seasons</span>
                </p>
            </td>
        </tr>
    </tbody>
</table>
</center>
<script>
    let params = new URLSearchParams(location.search);
    let comp = params.get('competition');
    let homeaway = params.get('homeaway');

    if (comp == "FLG") {
        document.getElementById("comp").selectedIndex = "1";
    }

    if (homeaway == "ho") {
        document.getElementById("homeaway").selectedIndex = "1";
    }
    else if (homeaway == "ao") {
        document.getElementById("homeaway").selectedIndex = "2";
    }
</script>

