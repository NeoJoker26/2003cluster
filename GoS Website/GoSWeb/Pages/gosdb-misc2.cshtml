                                <td class="center">@Match.nodefeats</td>
                                <td>@Match.start_nodefeats.Day @Model.MonthName(@Match.start_nodefeats) @Match.start_nodefeats.Year</td>
                                <td>@Match.date.Day @Model.MonthName(@Match.date) @Match.date.Year</td>
                                <td class="right">@Match.interval</td>
