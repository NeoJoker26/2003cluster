@page
@model GoSWeb.Pages.gosdb_misc2Model
@{
}
<link rel="stylesheet" type="text/css" href="~/css/gos2.css">
<script>
    function Submit() {
        var comp = document.getElementById("comp").value; // league or  all
        var homeaway = document.getElementById("homeaway").value;

        console.log(comp + " " + homeaway);
        window.location.replace("gosdb-misc2?competition=" + comp + "&homeaway=" + homeaway);
    }

</script>
<center>
<form style="font-size: 10px; padding: 0; margin: 0;" action="Submit" method="post" name="form1">
    <select id="comp" name="competition" style="font-size: 10px"><option value="ALL" selected="">All Competitions</option><option value="FLG">Football League</option></select> <select id="homeaway" name="homeaway" style="font-size: 10px"><option value="ha" selected="">Home &amp; Away</option><option value="ho">Home only</option><option value="ao">Away only</option></select><br><input type="button" onclick="Submit()" style="width: auto; overflow: visible; color: #000000; background-color: #e0f0e0; font-size: 11px; padding: 1 5 1 5; margin: 9 0 0 0" value="Select options and click to redisplay" name="B1"><p></p>
</form>
<h3>@Model.heading</h3>
</center>
<center>
<table border="0" cellpadding="10" cellspacing="0" style="border-collapse: collapse; margin:0 0 12 0" bordercolor="#111111" >
    <tbody>
        <tr>
            <td style="text-align: right">
                <table class="tables" border="0" cellpadding="0" cellspacing="0" style="margin-top: 9; border-collapse: collapse">
                    <tbody>
                        <tr>
                            <td colspan="4">
                        <b>Consecutive Wins</b>
                        </td>
                        </tr>
                        <tr>
                            <td>
