        font-family: verdana,arial,helvetica,sans-serif;
        font-size: 10px;
    }

    .image-text {
        width: 180px;
        margin: 0 auto;
        text-align: center;
    }

    .or-text {
        text-align: center;
        margin: 10px 0;
    }


    .lists-container {
        display: flex;
        justify-content: space-between;
    }

    .list {
        font-size: 11px;
        color: #101010;
        border-top: medium none;
        padding: 5px;
