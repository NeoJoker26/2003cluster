        margin-bottom: 4px;
    }

    .list-item {
        border: 1px solid #808080;
        border-radius: 3px;
        padding: 4px;
        background-color: #ffffff;
    }

    .button-row {
        display: flex;
        justify-content: center;
    }

    .or-text {
        text-align: center;
        margin-bottom: 8px;
    }

    #reports-list {
        list-style-type: decimal;
        padding-left: 20px;
    }

        #reports-list li a {
            color: inherit;
            text-decoration: none;
        }

            #reports-list li a:hover {
                text-decoration: underline;
            }

    .list-button:hover {
        background-color: #f2f2f2;
        cursor: pointer;
    }
</style>


<script>
    function showReports() {
        $("#reports-list").show();
        $("#show-reports-button").text("Hide Reports");
        $("#show-reports-button").attr("onclick", "hideReports()");
    }

    function hideReports() {
        $("#reports-list").hide();
        $("#show-reports-button").text("Show Reports");
        $("#show-reports-button").attr("onclick", "showReports()");
    }
    function toggleList() {
        const list = document.getElementById("hidden-list");
        if (list.style.display === "none") {
            list.style.display = "block";
        } else {
            list.style.display = "none";
        }
    }

</script>
</center>