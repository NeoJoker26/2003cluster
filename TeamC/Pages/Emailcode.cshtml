@page
@model EmailcodeModel
@{
}

<!DOCTYPE html>
<html>
<head>
    <title>Email Form</title>
</head>
<style>
    body {
        text-align: center;
    }
</style>
<body>
<h1>Email Form</h1>
<form method="post" action="/Emailcode">
    <label for="to">To:</label>
    <input type="email" id="to" name="strTo" required>
    <br>
    <label for="cc">CC:</label>
    <input type="email" id="cc" name="strCc">
    <br>
    <label for="bcc">BCC:</label>
    <input type="email" id="bcc" name="strBcc">
    <br>
    <label for="from">From:</label>
    <input type="email" id="from" name="strFrom" required>
    <br>
    <label for="subject">Subject:</label>
    <input type="text" id="subject" name="subject" required>
    <br>
    <label for="message">Message:</label>
    <textarea id="message" name="message" rows="4" required></textarea>
    <br>
    <input type="submit" value="Send">
</form>
</body>
</html>